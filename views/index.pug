#flexWrap

  #dummyFlex

  #titleWrap
    h1.mulboxTitle Mulbox
          span.fas.fa-question-circle#helpQuestion 
    form
      input#charCount(type="number" size="520" min="10" max="5000" placeholder="only #s")

  #togBtn
        #toggleBtnWrapper
          .toggleBtnWrapper-2
            .toggle
              p Imgur
            .toggle
              p Twitter
          .toggleBtnWrapper-2#toggleBtnWrapper-2
            .toggle
              p Imgur
            .toggle
              p twitter




#inboxes
  .inboxWrapper
    textarea#inbox(rows='10' cols='30' placeholder='Write your comment here! ')
#mulboxes
  // About modal content
.modal#modal
  .modalContent
    .modalHeader
      span.close &times;
      h2.modalText Mulbox
      p.modalText A textbox manager for writing large comments on social media platforms that impose a character limit.
    .modalBtns
      h2.modalText How it works.
        p.modalText Simply write out your comment in the text area and Mulbox will automagicly split the textboxes for you allowing you to easily copy and paste annoyingly large multi-box comments! YAY!
    .modalFooter
      h3
        a(href="https://github.com/SamRodrigue/mulbox").fab.fa-github.gitLink
